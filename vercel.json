{
  "version": 2,
  "builds": [
    {
      "src": "web/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/web/landing.html"
    },
    {
      "src": "/quote-term-life",
      "dest": "/web/capture-term-life.html"
    },
    {
      "src": "/dashboard",
      "dest": "/web/dashboard.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/leads",
      "destination": "/api/leads.ts"
    }
  ]
}
